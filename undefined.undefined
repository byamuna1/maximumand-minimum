
#include<bits/stdc++.h>
using namespace std;

int main() {
   int t,n;
   cin>>t;
   while(t--)
   {
        
        cin>>n;
       vector<int> V(n);
       for(int i=0;i<n;i++){
         cin>>V[i];
       }
       sort(V.begin(),V.end());
       long long int ans;
       long long int min;
       min=V[0];//minimum element
       long long int k=n-1; // length of array
       ans=min*k;
       cout<<ans<<endl;
   }
}

        